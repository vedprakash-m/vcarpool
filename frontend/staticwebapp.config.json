{
  "platform": {
    "apiRuntime": "node:20"
  },
  "routes": [
    {
      "route": "/sw.js",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate",
        "Content-Type": "application/javascript"
      }
    },
    {
      "route": "/manifest.json",
      "headers": {
        "Cache-Control": "public, max-age=86400",
        "Content-Type": "application/manifest+json"
      }
    },
    {
      "route": "/icon.svg",
      "headers": {
        "Cache-Control": "public, max-age=86400",
        "Content-Type": "image/svg+xml"
      }
    },
    {
      "route": "/health",
      "methods": ["GET"],
      "rewrite": "https://carpool-api-prod.azurewebsites.net/api/health"
    },
    {
      "route": "/api/auth/*",
      "methods": ["POST", "OPTIONS"],
      "allowedRoles": ["anonymous"],
      "rewrite": "https://carpool-api-prod.azurewebsites.net/api/auth/$1",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    },
    {
      "route": "/login",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/register",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/forgot-password",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/*",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "allowedRoles": ["anonymous"],
      "rewrite": "https://carpool-api-prod.azurewebsites.net/api/$1",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    },
    {
      "route": "/images/*",
      "headers": {
        "Cache-Control": "public, max-age=2592000"
      }
    },
    {
      "route": "/favicon.ico",
      "headers": {
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "route": "/*",
      "allowedRoles": ["anonymous"],
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/images/*",
      "/css/*",
      "/js/*",
      "/_next/*",
      "/favicon.ico",
      "/sw.js",
      "/*.json",
      "/*.xml",
      "/*.txt",
      "/*.svg",
      "/*.ico",
      "/manifest.json"
    ]
  },
  "responseOverrides": {
    "401": {
      "redirect": "/login",
      "statusCode": 302
    },
    "404": {
      "rewrite": "/404.html",
      "statusCode": 404
    }
  },
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "X-XSS-Protection": "1; mode=block",
    "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data: https:; connect-src 'self' https://*.azurewebsites.net https://*.azurestaticapps.net;",
    "Referrer-Policy": "strict-origin-when-cross-origin"
  },
  "trailingSlash": "never"
}
